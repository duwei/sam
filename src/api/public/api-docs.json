{
    "openapi": "3.0.0",
    "info": {
        "title": "Api",
        "description": "Api documentation",
        "contact": {
            "name": "duwei",
            "email": "duweiwork@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/sam/api",
            "description": "development"
        }
    ],
    "paths": {
        "/sam/callback": {
            "get": {
                "tags": [
                    "OAuth"
                ],
                "summary": "oauth callback api for third party.",
                "operationId": "1de9e0526c7c17306fd664c936462a1b",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "code": {
                                        "description": "callback code",
                                        "type": "string"
                                    },
                                    "state": {
                                        "description": "callback state",
                                        "type": "string"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "code": "",
                                    "state": "service_id=1"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "register user response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "properties": {
                                                "data": {
                                                    "$ref": "#/components/schemas/User"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        {
                                            "$ref": "#/components/schemas/ApiResponse"
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/sam/me": {
            "get": {
                "tags": [
                    "Account"
                ],
                "summary": "user profile",
                "responses": {
                    "200": {
                        "description": "user profile response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "properties": {
                                                "data": {
                                                    "$ref": "#/components/schemas/User"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        {
                                            "$ref": "#/components/schemas/ApiResponse"
                                        }
                                    ]
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/sam/refresh": {
            "post": {
                "tags": [
                    "Account"
                ],
                "summary": "JWT token refresh",
                "operationId": "f723eac082e32b1c9d3582638ddb7df3",
                "responses": {
                    "200": {
                        "description": "refresh JWT token response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "properties": {
                                                "data": {
                                                    "$ref": "#/components/schemas/JWTToken"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        {
                                            "$ref": "#/components/schemas/ApiResponse"
                                        }
                                    ]
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/sam/services": {
            "get": {
                "tags": [
                    "Service"
                ],
                "summary": "all services list",
                "operationId": "96950feb4aaa0ea9dd7db3b3838bd669",
                "responses": {
                    "200": {
                        "description": "registered services response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "properties": {
                                                "data": {
                                                    "description": "response data",
                                                    "type": "array",
                                                    "items": {
                                                        "$ref": "#/components/schemas/Service"
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        },
                                        {
                                            "$ref": "#/components/schemas/ApiResponse"
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/sam/service/register": {
            "post": {
                "tags": [
                    "Service"
                ],
                "summary": "register account service",
                "operationId": "199c9670b83496594e79815bbb355e4b",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "third_party_id": {
                                        "description": "third party id: 1 => Google, 2 => Facebook, 3 => Tess",
                                        "type": "number"
                                    },
                                    "client_id": {
                                        "description": "client id, from third party",
                                        "type": "string"
                                    },
                                    "client_secret": {
                                        "description": "client secret, from third party",
                                        "type": "string"
                                    },
                                    "redirect_uri": {
                                        "description": "redirect uri, it should be set to: https://tessverso.io/sam/api/callback",
                                        "type": "string"
                                    },
                                    "client_uri": {
                                        "description": "client uri, optional, if empty,  '/success' will be used",
                                        "type": "string"
                                    },
                                    "scope": {
                                        "description": "scope",
                                        "type": "string"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "third_party_id": "3",
                                    "client_id": "4",
                                    "client_secret": "XCMx7GWjvHqqF72IzGjcNoLh9N59ksfK1rHcyPhj",
                                    "redirect_uri": "https://tessverso.io/sam/api/callback",
                                    "client_uri": "http://localhost:3000/googlelogin/redirect",
                                    "scope": "*"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "register user response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "properties": {
                                                "data": {
                                                    "description": "response data",
                                                    "properties": {
                                                        "service_id": {
                                                            "description": "service state id",
                                                            "type": "string"
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        {
                                            "$ref": "#/components/schemas/ApiResponse"
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/sam/service/update": {
            "post": {
                "tags": [
                    "Service"
                ],
                "summary": "update service",
                "operationId": "6a572e20f926ac6182bc4025c6bb82f3",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "id": {
                                        "description": "service id",
                                        "type": "number"
                                    },
                                    "third_party_id": {
                                        "description": "third party id: 1 => Google, 2 => Facebook, 3 => Tess",
                                        "type": "number"
                                    },
                                    "client_id": {
                                        "description": "client id",
                                        "type": "string"
                                    },
                                    "client_secret": {
                                        "description": "client secret",
                                        "type": "string"
                                    },
                                    "redirect_uri": {
                                        "description": "redirect uri",
                                        "type": "string"
                                    },
                                    "scope": {
                                        "description": "scope",
                                        "type": "string"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "id": "1",
                                    "third_party_id": "3",
                                    "client_id": "4",
                                    "client_secret": "XCMx7GWjvHqqF72IzGjcNoLh9N59ksfK1rHcyPhj",
                                    "redirect_uri": "http://localhost:8080/callback",
                                    "scope": "*"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "inquiry categories response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/ApiResponse"
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/sam/service/delete": {
            "post": {
                "tags": [
                    "Service"
                ],
                "summary": "delete service",
                "operationId": "698ceb7f0d2b5374dc4c267668e59616",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "id"
                                ],
                                "properties": {
                                    "id": {
                                        "description": "service id",
                                        "type": "number"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "id": 1
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "inquiry categories response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/ApiResponse"
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ApiResponse": {
                "required": [
                    "code",
                    "msg"
                ],
                "properties": {
                    "code": {
                        "description": "response code",
                        "type": "number"
                    },
                    "msg": {
                        "description": "response message",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "JWTToken": {
                "properties": {
                    "access_token": {
                        "description": "access token",
                        "type": "string"
                    },
                    "token_type": {
                        "description": "token type",
                        "type": "string"
                    },
                    "expires_in": {
                        "description": "token expiration time",
                        "type": "integer"
                    }
                },
                "type": "object"
            },
            "Service": {
                "properties": {
                    "id": {
                        "description": "service id",
                        "type": "number"
                    },
                    "third_party": {
                        "$ref": "#/components/schemas/ThirdParty"
                    },
                    "client_id": {
                        "description": "client id",
                        "type": "string"
                    },
                    "client_secret": {
                        "description": "client secret",
                        "type": "string"
                    },
                    "redirect_uri": {
                        "description": "redirect uri",
                        "type": "string"
                    },
                    "scope": {
                        "description": "scope",
                        "type": "string"
                    },
                    "client_uri": {
                        "description": "client uri",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "ThirdParty": {
                "properties": {
                    "id": {
                        "description": "third party id",
                        "type": "number"
                    },
                    "name": {
                        "description": "third party name",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "User": {
                "properties": {
                    "id": {
                        "description": "user id",
                        "type": "number"
                    },
                    "name": {
                        "description": "user name",
                        "type": "string"
                    },
                    "email": {
                        "description": "user email",
                        "type": "string"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    }
}
